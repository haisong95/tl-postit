
<div class="well">
<%= form_for @user do |f| %>
<%= render 'shared/errors', obj: @user %>
  <div class="control-group">
    <%= f.label :username %>
    <%= f.text_field :username %>
  </div>

  <div class="control-group">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>


  <div class="control-group">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>

  </div>


  <% if logged_in? %>
  <%= f.submit "Update", class: 'btn btn-success'%>
  <% else %>
  <%= f.submit "Register", class: 'btn btn-success'%>
  <% end %>
<%end%>
